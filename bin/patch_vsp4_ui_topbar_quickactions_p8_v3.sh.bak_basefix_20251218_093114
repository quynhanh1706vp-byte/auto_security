#!/usr/bin/env bash
set -euo pipefail
cd /home/test/Data/SECURITY_BUNDLE/ui

TS="$(date +%Y%m%d_%H%M%S)"
MARK="VSP_UI_TOPBAR_QUICKACTIONS_P8_V3"

# pick ALL candidate templates that likely serve /vsp4
mapfile -t CANDS < <(
  (grep -rl --include='*.html' 'vsp_bundle_commercial_v2.js' templates 2>/dev/null || true)
)
# fallback: common template names
[ ${#CANDS[@]} -gt 0 ] || CANDS=(templates/vsp_dashboard_2025.html templates/vsp_4tabs_commercial_v1.html)

# keep only existing files (unique)
TMP=()
for f in "${CANDS[@]}"; do [ -f "$f" ] && TMP+=("$f"); done
# unique
CANDS=($(printf "%s\n" "${TMP[@]}" | awk '!x[$0]++' || true))
[ ${#CANDS[@]} -gt 0 ] || { echo "[ERR] cannot find any template to patch under templates/"; exit 2; }

echo "== PATCH UI TOPBAR P8.V3 =="
echo "[TS]=$TS"
echo "[FILES]=${#CANDS[@]}"
printf " - %s\n" "${CANDS[@]}"

python3 - <<'PY'
import re
from pathlib import Path

MARK = "VSP_UI_TOPBAR_QUICKACTIONS_P8_V3"

BLOCK = r"""
<!-- VSP_UI_TOPBAR_QUICKACTIONS_P8_V3 BEGIN -->
<style id="vspTopbarCssP8">
  #vspTopbarP8{
    position:fixed; top:0; left:0; right:0; height:52px;
    display:flex; align-items:center; justify-content:space-between;
    padding:0 14px; z-index:99999;
    background:rgba(10,14,24,.92);
    border-bottom:1px solid rgba(255,255,255,.08);
    backdrop-filter: blur(8px);
  }
  #vspTopbarP8 .l{display:flex; gap:10px; align-items:center; min-width:260px;}
  #vspTopbarP8 .r{display:flex; gap:8px; align-items:center;}
  #vspTopbarP8 .brand{
    font-weight:700; letter-spacing:.3px; font-size:14px;
    color:#e8eefc;
  }
  #vspTopbarP8 .chip{
    font-size:12px; padding:4px 8px; border-radius:999px;
    border:1px solid rgba(255,255,255,.10);
    color:rgba(232,238,252,.92);
    background:rgba(255,255,255,.04);
    white-space:nowrap;
  }
  #vspTopbarP8 .btn{
    font-size:12px; padding:7px 10px; border-radius:10px;
    border:1px solid rgba(255,255,255,.12);
    background:rgba(255,255,255,.06);
    color:#eef3ff; cursor:pointer;
  }
  #vspTopbarP8 .btn:hover{ background:rgba(255,255,255,.10); }
  /* push page down safely */
  body{ padding-top:52px !important; }
</style>

<div id="vspTopbarP8">
  <div class="l">
    <div class="brand">VersaSecure Platform — Commercial</div>
    <div class="chip" id="vspChipIsoP8">ISO 27001-ready</div>
    <div class="chip" id="vspChipToolsP8">8 tools</div>
    <div class="chip" id="vspChipDegradedP8">DEGRADED: …</div>
  </div>
  <div class="r">
    <button class="btn" id="vspBtnRefreshP8">Refresh</button>
    <button class="btn" id="vspBtnOpenHtmlP8">Open HTML</button>
    <button class="btn" id="vspBtnExportTgzP8">Export TGZ</button>
    <button class="btn" id="vspBtnVerifyShaP8">Verify SHA</button>
  </div>
</div>

<script id="vspTopbarJsP8">
(function(){
  if (window.__VSP_UI_TOPBAR_QUICKACTIONS_P8_V3) return;
  window.__VSP_UI_TOPBAR_QUICKACTIONS_P8_V3 = true;

  function norm(s){ return (s||"").replace(/\s+/g," ").trim().toLowerCase(); }
  function clickBtnByText(exact){
    const want = norm(exact);
    const btns = Array.from(document.querySelectorAll("button,a"));
    for (const b of btns){
      const t = norm(b.innerText || b.textContent || "");
      if (!t) continue;
      if (t === want){ b.click(); return true; }
    }
    return false;
  }
  function clickBtnContains(part){
    const want = norm(part);
    const btns = Array.from(document.querySelectorAll("button,a"));
    for (const b of btns){
      const t = norm(b.innerText || b.textContent || "");
      if (!t) continue;
      if (t.includes(want)){ b.click(); return true; }
    }
    return false;
  }

  // Wire quick actions to EXISTING buttons (so no run_dir logic duplicated)
  const $ = (id)=>document.getElementById(id);

  $("vspBtnRefreshP8").onclick = function(){
    if (clickBtnByText("Refresh") || clickBtnContains("refresh")) return;
    location.reload();
  };

  $("vspBtnOpenHtmlP8").onclick = function(){
    if (clickBtnContains("open html")) return;
    alert("Open HTML button not found in page. Try Runs & Reports tab then retry.");
  };

  $("vspBtnExportTgzP8").onclick = function(){
    if (clickBtnContains("export tgz")) return;
    alert("Export TGZ button not found in page. Try Runs & Reports tab then retry.");
  };

  $("vspBtnVerifyShaP8").onclick = function(){
    if (clickBtnContains("verify sha")) return;
    alert("Verify SHA button not found in page. Try Runs & Reports tab then retry.");
  };

  // Live degraded chip from API (safe, read-only)
  function updateDegraded(){
    fetch("/api/vsp/dashboard_commercial_v2?ts=" + Date.now())
      .then(r=>r.json())
      .then(j=>{
        const yes = !!(((j||{}).overall||{}).degraded_yes);
        $("vspChipDegradedP8").textContent = "DEGRADED: " + (yes ? "YES" : "NO");
      })
      .catch(()=>{ $("vspChipDegradedP8").textContent = "DEGRADED: N/A"; });
  }
  updateDegraded();
  setInterval(updateDegraded, 15000);
})();
</script>
<!-- VSP_UI_TOPBAR_QUICKACTIONS_P8_V3 END -->
"""

def inject_after_body_open(html: str) -> str:
    m = re.search(r"<body\b[^>]*>", html, flags=re.IGNORECASE)
    if not m:
        return html
    i = m.end()
    return html[:i] + "\n" + BLOCK + "\n" + html[i:]

# patch all candidate templates that exist
import os, sys, subprocess, json

# shell passes file list via env (newline separated)
files = os.environ.get("P8_FILES","").splitlines()
patched = 0
for f in files:
    if not f.strip():
        continue
    p = Path(f.strip())
    if not p.exists():
        continue
    s = p.read_text(encoding="utf-8", errors="replace")
    if MARK in s:
        print("[SKIP] already:", p)
        continue
    s2 = inject_after_body_open(s)
    if s2 == s:
        # no <body>, fallback: append at end
        s2 = s + "\n" + BLOCK + "\n"
    # marker
    s2 += "\n<!-- " + MARK + " -->\n"
    p.write_text(s2, encoding="utf-8")
    print("[OK] patched:", p)
    patched += 1

if patched == 0:
    print("[WARN] nothing patched (already or no files).")
PY

# export template list to python via env
export P8_FILES="$(printf "%s\n" "${CANDS[@]}")"

# re-run python with env now set
python3 - <<'PY'
import os, subprocess, sys
# noop: python patch already done above; keep this file for readability
PY

echo "== HARD RESET 8910 =="
bash /home/test/Data/SECURITY_BUNDLE/ui/bin/restart_ui_8910_hardreset_p0_v1.sh

echo "== SMOKE =="
curl -sS -m 4 -o /dev/null -w '[HTTP] %{http_code} /vsp4\n' "$BASE/vsp4" 2>/dev/null || true
echo "[NEXT] Ctrl+Shift+R http://127.0.0.1:8910/vsp4  (TopBar + Quick Actions phải hiện ngay)"
