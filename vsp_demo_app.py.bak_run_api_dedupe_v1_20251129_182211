@app.route("/api/vsp/run_full", methods=["POST"])
def api_vsp_run_full():
    data = request.get_json(force=True, silent=True) or {}
    target_url = str(data.get("target_url", "")).strip()
    src_path   = str(data.get("src_path", "")).strip()
    profile    = str(data.get("profile", "EXT") or "EXT").upper()

    if not target_url or not src_path:
        return jsonify({"error": "Missing target_url or src_path"}), 400

    now = datetime.datetime.now().strftime("%Y%m%d_%H%M%S")
    run_id = f"RUN_VSP_{profile}_{now}"
    run_dir = ROOT / "out" / run_id
    run_dir.mkdir(parents=True, exist_ok=True)

    # TODO: nếu bạn dùng script FULL khác thì đổi tên ở đây
    cmd = [
        str(ROOT / "bin" / "run_all_with_grype_fix.sh"),
        src_path,
        str(run_dir),
        profile.lower(),
    ]

    try:
        res = subprocess.run(
            cmd,
            cwd=str(ROOT),
            stdout=subprocess.PIPE,
            stderr=subprocess.STDOUT,
            text=True,
            check=False,
        )
        (run_dir / "_vsp_run.log").write_text(res.stdout or "")

        # Cập nhật symlink RUN_CURRENT -> run mới
        cur = ROOT / "out" / "RUN_CURRENT"
        try:
            if cur.is_symlink() or cur.exists():
                cur.unlink()
        except Exception:
            pass
        try:
            cur.symlink_to(run_dir.name)
        except Exception:
            pass

        if res.returncode != 0:
            return jsonify({
                "run_id": run_id,
                "status": "failed",
                "error": f"scan exited with code {res.returncode}",
            }), 500

        return jsonify({"run_id": run_id, "status": "ok"})
    except Exception as e:
        return jsonify({"error": str(e)}), 500



# VSP_RUN_FULL_EXT_V1: API chạy FULL EXT cho SRC bất kỳ
@app.post("/api/vsp/run_full_scan")
def api_vsp_run_full_scan():
    from flask import request, jsonify

    data = request.get_json(force=True) or {}
    target_url = (data.get("target_url") or "").strip()
    src_path   = (data.get("src_path") or "").strip()
    profile    = (data.get("profile") or "EXT").strip() or "EXT"

    if not src_path:
        return jsonify({
            "status": "error",
            "message": "Thiếu src_path",
            "request": data,
        }), 400

    root = Path("/home/test/Data/SECURITY_BUNDLE")
    src_dir = Path(src_path).expanduser().resolve()

    if not src_dir.is_dir():
        return jsonify({
            "status": "error",
            "message": f"SRC không tồn tại hoặc không phải thư mục: {src_dir}",
            "request": data,
        }), 400

    ts = datetime.datetime.utcnow().strftime("%Y%m%d_%H%M%S")
    run_id = f"RUN_VSP_FULL_EXT_{ts}"
    run_dir = root / "out" / run_id
    run_dir.mkdir(parents=True, exist_ok=True)

    meta = {
        "run_id": run_id,
        "ts": datetime.datetime.utcnow().isoformat() + "Z",
        "target_url": target_url,
        "src_path": str(src_dir),
        "profile": profile,
        "mode": "FULL_EXT",
    }
    (run_dir / "run_meta.json").write_text(
        json.dumps(meta, ensure_ascii=False, indent=2),
        encoding="utf-8"
    )

    # Gọi script full scan ở background
    cmd = [str(root / "bin" / "run_vsp_full_ext.sh"), str(src_dir)]
    stdout_file = open(run_dir / "run_stdout.log", "wb")
    stderr_file = open(run_dir / "run_stderr.log", "wb")
    subprocess.Popen(
        cmd,
        cwd=str(root),
        stdout=stdout_file,
        stderr=stderr_file,
    )

    return jsonify({
        "status": "started",
        "message": "Đã kick FULL EXT, đang chạy nền.",
        "run_id": run_id,
        "run_dir": str(run_dir),
        "request": data,
    })


if __name__ == "__main__":
    app.run(host="0.0.0.0", port=8950, debug=True)
