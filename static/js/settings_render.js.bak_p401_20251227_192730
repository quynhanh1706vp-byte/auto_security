"use strict";

// Bản TEST: chỉ để xem JS này có chạy không
(function () {
  alert("VSP SETTINGS TEST v2 – JS đã load!");

  if (!window.VSP) window.VSP = {};

  window.VSP.initSettings = async function () {

    // tạm thời không render gì, chỉ log
  };
})();


/* === VSP_JSON_COLLAPSE_P400_TAB_settings === */
(function(){
  try {
    if (!location || !location.pathname) return;
    if (location.pathname.indexOf("/c/settings") !== 0) return;
    function go(){
      try {
        if (window.VSPC && typeof window.VSPC.reapplyJsonCollapseP400 === "function") {
          window.VSPC.reapplyJsonCollapseP400("settings");
        } else if (window.VSPC && typeof window.VSPC.installJsonCollapseP400 === "function") {
          window.VSPC.installJsonCollapseP400(document, {page:"settings", key:"vsp_json_expand::settings"});
        }
      } catch(e){}
    }
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", go);
    } else {
      go();
    }
  } catch(e){}
})();

