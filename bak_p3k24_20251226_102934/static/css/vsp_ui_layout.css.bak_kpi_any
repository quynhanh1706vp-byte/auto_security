/* =========================================================
 * VSP_SETTINGS_STYLE_COMMERCIAL_20251206
 * Tab Settings – giao diện thương mại, gọn và tinh tế.
 * ====================================================== */

.vsp-settings-root {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-top: 12px;
}

/* Hàng chính: General + Tool stack */
.vsp-settings-row-main {
  display: grid;
  grid-template-columns: minmax(0, 2.1fr) minmax(0, 2fr);
  gap: 24px;
}

@media (max-width: 1200px) {
  .vsp-settings-row-main {
    grid-template-columns: minmax(0, 1fr);
  }
}

.vsp-settings-card {
  background: var(--vsp-surface-elevated, #07111e);
  border-radius: 18px;
  padding: 18px 20px 20px;
  box-shadow: 0 0 0 1px rgba(120, 140, 180, 0.25);
}

/* Header card */
.vsp-settings-card .vsp-card-header {
  font-size: 0.85rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: var(--vsp-text-soft, #a9b5d8);
  margin-bottom: 14px;
}

/* Form row */
.vsp-form-row {
  margin-bottom: 14px;
}

.vsp-form-row:last-child {
  margin-bottom: 0;
}

.vsp-form-row > label {
  display: block;
  font-size: 0.88rem;
  font-weight: 500;
  color: var(--vsp-text, #e9eefc);
  margin-bottom: 4px;
}

/* Input / select */
.vsp-input {
  width: 100%;
  padding: 7px 10px;
  border-radius: 10px;
  border: 1px solid rgba(135, 155, 190, 0.5);
  background: var(--vsp-surface-deep, #050b14);
  color: var(--vsp-text, #e9eefc);
  font-size: 0.9rem;
}

.vsp-input::placeholder {
  color: rgba(180, 195, 220, 0.55);
}

.vsp-input:focus {
  outline: none;
  border-color: var(--vsp-accent, #3dd9b6);
  box-shadow: 0 0 0 1px rgba(61, 217, 182, 0.35);
}

/* Help text nhỏ bên dưới */
.vsp-help-text {
  margin-top: 3px;
  font-size: 0.78rem;
  color: var(--vsp-text-soft, #9baad3);
}

/* Radio group – scan targets */
.vsp-radio-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-top: 2px;
}

.vsp-radio-group label {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 0.86rem;
  color: var(--vsp-text-soft, #b0c0e0);
  cursor: pointer;
}

.vsp-radio-group input[type="radio"] {
  accent-color: var(--vsp-accent, #3dd9b6);
}

/* Bảng tool stack */
.vsp-table-compact.vsp-table-tools {
  font-size: 0.86rem;
}

.vsp-table-compact.vsp-table-tools th,
.vsp-table-compact.vsp-table-tools td {
  padding-top: 5px;
  padding-bottom: 5px;
}

/* Switch control */
.vsp-switch {
  position: relative;
  display: inline-block;
  width: 36px;
  height: 18px;
}

.vsp-switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.vsp-switch-slider {
  position: absolute;
  cursor: pointer;
  inset: 0;
  background: rgba(90, 110, 150, 0.6);
  border-radius: 999px;
  transition: background 0.18s ease, box-shadow 0.18s ease;
}

.vsp-switch-slider:before {
  content: "";
  position: absolute;
  height: 14px;
  width: 14px;
  left: 2px;
  top: 2px;
  border-radius: 50%;
  background: #e5edff;
  transition: transform 0.18s ease;
}

.vsp-switch input:checked + .vsp-switch-slider {
  background: linear-gradient(135deg,
    var(--vsp-accent, #3dd9b6),
    #53f0d0);
  box-shadow: 0 0 8px rgba(83, 240, 208, 0.45);
}

.vsp-switch input:checked + .vsp-switch-slider:before {
  transform: translateX(18px);
}

/* Footer: nút Save + status */
.vsp-settings-row-footer {
  display: flex;
  align-items: center;
  gap: 12px;
  justify-content: flex-end;
}

.vsp-btn {
  border: none;
  border-radius: 999px;
  padding: 8px 18px;
  font-size: 0.88rem;
  font-weight: 500;
  cursor: pointer;
}

.vsp-btn-primary {
  background: linear-gradient(135deg,
    var(--vsp-accent, #3dd9b6),
    #3aa4ff);
  color: #020712;
  box-shadow: 0 0 18px rgba(59, 220, 200, 0.35);
}

.vsp-btn-primary:hover {
  filter: brightness(1.05);
}

.vsp-settings-status {
  font-size: 0.82rem;
  color: var(--vsp-text-soft, #b0c0e0);
}

.vsp-settings-status.is-ok {
  color: #54e0c2;
}

.vsp-settings-status.is-err {
  color: #ff7f8f;
}


