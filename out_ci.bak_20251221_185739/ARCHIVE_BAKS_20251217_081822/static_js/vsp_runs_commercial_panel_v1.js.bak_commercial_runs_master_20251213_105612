(function () {
  'use strict';
  if (window.VSP_RUNS_COMMERCIAL_PANEL_V1) return;
  window.VSP_RUNS_COMMERCIAL_PANEL_V1 = true;

  const qs = (s, r=document) => r.querySelector(s);

  function findRunsHost(){
    // âœ… Your template uses this exact id for Runs pane
    return qs('#vsp-runs-main');
  }

  function mount() {
    const host = findRunsHost();
    if (!host) {
      console.log('[VSP_RUNS_COMMERCIAL_PANEL_V1] host #vsp-runs-main not found');
      return;
    }
    if (qs('#vsp-runs-commercial-panel', host)) return;

    console.log('[VSP_RUNS_COMMERCIAL_PANEL_V1] mount into #vsp-runs-main');

    const wrap = document.createElement('div');
    wrap.id = 'vsp-runs-commercial-panel';
    wrap.style.cssText = "margin:14px;padding:14px;border:1px solid rgba(255,255,255,.08);border-radius:16px;background:rgba(255,255,255,.02);position:relative;z-index:50;display:block" ;

    wrap.innerHTML = `
      <div style="display:flex;justify-content:space-between;gap:12px;flex-wrap:wrap">
        <div>
          <div style="font-size:14px;font-weight:800">Run Scan</div>
          <div style="font-size:12px;opacity:.8">Commercial panel (mount: #vsp-runs-main)</div>
        </div>
        <div id="vsp-run-badge" style="padding:6px 10px;border-radius:999px;border:1px solid rgba(255,255,255,.10);font-size:12px">
          IDLE
        </div>
      </div>

      <div style="display:grid;grid-template-columns:1fr 220px 220px 160px;gap:10px;margin-top:12px">
        <div>
          <div style="font-size:12px;opacity:.8;margin-bottom:6px">Target</div>
          <input id="vsp-run-target" placeholder="/path or https://url"
            style="width:100%;padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.10);background:rgba(0,0,0,.15);color:inherit"/>
        </div>
        <div>
          <div style="font-size:12px;opacity:.8;margin-bottom:6px">Target Type</div>
          <select id="vsp-run-target-type"
            style="width:100%;padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.10);background:rgba(0,0,0,.15);color:inherit">
            <option value="path">path</option>
            <option value="url">url</option>
          </select>
        </div>
        <div>
          <div style="font-size:12px;opacity:.8;margin-bottom:6px">Profile</div>
          <select id="vsp-run-profile"
            style="width:100%;padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.10);background:rgba(0,0,0,.15);color:inherit">
            <option value="FULL_EXT">FULL_EXT</option>
            <option value="FAST">FAST</option>
          </select>
        </div>
        <div>
          <div style="font-size:12px;opacity:.8;margin-bottom:6px">Mode</div>
          <select id="vsp-run-mode"
            style="width:100%;padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.10);background:rgba(0,0,0,.15);color:inherit">
            <option value="local">local</option>
            <option value="ci">ci</option>
          </select>
        </div>
      </div>

      <div style="display:flex;gap:10px;align-items:center;flex-wrap:wrap;margin-top:12px">
        <button id="vsp-run-btn"
          style="padding:10px 14px;border-radius:12px;border:1px solid rgba(255,255,255,.12);background:rgba(255,255,255,.06);color:inherit;cursor:pointer;font-weight:800">
          Run Scan Now
        </button>
        <div style="font-size:12px;opacity:.85">REQ: <span id="vsp-run-req">-</span> | CI_RUN: <span id="vsp-run-ci">-</span></div>
      </div>

      <div style="margin-top:12px">
        <div style="font-size:12px;opacity:.8;margin-bottom:6px">Tail</div>
        <pre id="vsp-run-tail"
          style="margin:0;max-height:280px;overflow:auto;padding:10px 12px;border-radius:12px;border:1px solid rgba(255,255,255,.08);background:rgba(0,0,0,.18);font-size:12px;line-height:1.35">-</pre>
      </div>
    `;

    host.prepend(wrap);

    const badge = qs('#vsp-run-badge', wrap);
    const reqEl = qs('#vsp-run-req', wrap);
    const ciEl  = qs('#vsp-run-ci', wrap);
    const tail  = qs('#vsp-run-tail', wrap);
    const btn   = qs('#vsp-run-btn', wrap);

    let timer = null;
    const setBadge = (t)=> badge.textContent = t;

    async function poll(reqId) {
      if (timer) clearInterval(timer);
      async function tick(){
        try{
          const r = await fetch('/api/vsp/run_status/' + encodeURIComponent(reqId), {cache:'no-store'});
          const j = await r.json();
          setBadge((j.status || 'UNKNOWN') + (j.final ? ' (FINAL)' : ''));
          reqEl.textContent = j.request_id || reqId;
          ciEl.textContent  = j.ci_run_id || '-';
          tail.textContent  = j.tail || JSON.stringify(j, null, 2);
          if (j.final) { clearInterval(timer); timer=null; }
        }catch(e){
          tail.textContent = '[POLL_ERR] ' + String(e);
        }
      }
      await tick();
      timer = setInterval(tick, 1200);
    }

    async function run() {
      btn.disabled = true;
      setBadge('SUBMITTING...');
      try{
        const target = (qs('#vsp-run-target', wrap).value || '').trim();
        const target_type = qs('#vsp-run-target-type', wrap).value;
        const profile = qs('#vsp-run-profile', wrap).value;
        const mode = qs('#vsp-run-mode', wrap).value;

        if (!target) { setBadge('ERR: target empty'); return; }

        const payload = {mode, profile, target_type, target};
        const r = await fetch('/api/vsp/run', {
          method:'POST', headers:{'Content-Type':'application/json'},
          body: JSON.stringify(payload)
        });
        const j = await r.json();
        if (j && j.request_id) {
          setBadge('QUEUED');
          reqEl.textContent = j.request_id;
          await poll(j.request_id);
        } else {
          setBadge('ERR');
          tail.textContent = JSON.stringify(j, null, 2);
        }
      } finally {
        btn.disabled = false;
      }
    }

    btn.addEventListener('click', run);
  }

  document.addEventListener('DOMContentLoaded', function(){
    // VSP_JS_BEACON_V1
    try{
      if (!document.getElementById('vsp-js-beacon')) {
        var b = document.createElement('div');
        b.id = 'vsp-js-beacon';
        b.style.cssText = 'position:fixed;bottom:8px;right:8px;z-index:99999;padding:4px 8px;border:1px solid rgba(255,255,255,.2);border-radius:999px;font-size:11px;background:rgba(0,0,0,.35)';
        b.textContent = 'VSP JS OK';
        document.body.appendChild(b);
      }
    }catch(e){}

    setTimeout(mount, 500);
    setTimeout(mount, 1500);
  });
  window.addEventListener('hashchange', function(){ setTimeout(mount, 200); });
})();
