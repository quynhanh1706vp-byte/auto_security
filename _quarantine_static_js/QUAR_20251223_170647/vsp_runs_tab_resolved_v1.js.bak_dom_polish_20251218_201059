    var args = Array.prototype.slice.call(arguments);
    try{
      if (typeof h === 'function') return h.apply(null, args);
      if (h && typeof h.open === 'function') return h.open.apply(h, args);
    } catch(e){
      try{ console.warn('[VSP][DD_CALL_V1]', e); } catch(_){}
    }
    return null;
  };
})();


