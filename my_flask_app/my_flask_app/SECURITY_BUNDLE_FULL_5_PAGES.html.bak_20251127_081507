<script>
  // NAVIGATION
  document.querySelectorAll('.sb-nav-link').forEach(btn => {
    btn.addEventListener('click', () => {
      const target = btn.getAttribute('data-target');
      document.querySelectorAll('section').forEach(sec => sec.classList.add('hidden'));
      document.getElementById(target).classList.remove('hidden');

      document.querySelectorAll('.sb-nav-link').forEach(b => {
        b.classList.remove('sb-nav-active');
        b.classList.remove('text-slate-200');
        b.classList.add('text-slate-400');
      });
      btn.classList.add('sb-nav-active');
    });
  });

  // DATA SOURCE TABS
  const tabSummary = document.getElementById('tab-summary');
  const tabSamples = document.getElementById('tab-samples');
  const summaryContent = document.getElementById('summary-content');
  const samplesContent = document.getElementById('samples-content');

  tabSummary.onclick = () => {
    tabSummary.classList.add('sb-tab-active');
    tabSummary.classList.remove('sb-tab-inactive');
    tabSamples.classList.remove('sb-tab-active');
    tabSamples.classList.add('sb-tab-inactive');
    summaryContent.classList.remove('hidden');
    samplesContent.classList.add('hidden');
  };
  tabSamples.onclick = () => {
    tabSamples.classList.add('sb-tab-active');
    tabSamples.classList.remove('sb-tab-inactive');
    tabSummary.classList.remove('sb-tab-active');
    tabSummary.classList.add('sb-tab-inactive');
    samplesContent.classList.remove('hidden');
    summaryContent.classList.add('hidden');
  };

  // TREND CHART
  const ctx = document.getElementById('trendChart').getContext('2d');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['22/11', '23/11', '24/11', '25/11', '26/11'],
      datasets: [{
        data: [8997, 3891, 3330, 5236, 9071],
        borderColor: '#22c55e',
        backgroundColor: 'rgba(34,197,94,0.18)',
        fill: true,
        tension: 0.35,
        pointRadius: 4,
        pointBackgroundColor: '#bbf7d0',
        pointBorderWidth: 0
      }]
    },
    options: {
      plugins: { legend: { display: false } },
      scales: {
        x: {
          ticks: { color: '#9ca3af', font: { size: 10 } },
          grid: { display: false }
        },
        y: {
          ticks: { color: '#6b7280', font: { size: 10 } },
          grid: { color: 'rgba(31,41,55,0.8)', drawBorder: false }
        }
      }
    }
  });
</script>
