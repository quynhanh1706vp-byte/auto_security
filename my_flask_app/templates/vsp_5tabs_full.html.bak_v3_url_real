<script>
  // Simple tab switcher – bạn có thể gắn vào JS hiện có
  const tabButtons = document.querySelectorAll('.vsp-tab-btn');
  const tabPanes = document.querySelectorAll('.tab-pane');

  tabButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const targetId = btn.dataset.tab;

      tabButtons.forEach(b => b.classList.remove('active'));
      tabPanes.forEach(p => p.classList.remove('active'));

      btn.classList.add('active');
      document.getElementById(targetId).classList.add('active');
    });
  });

  // NOTE: Các canvas (chartSeverityDonut, chartTrend, ...) chỉ là placeholder.
  // Bạn bind Chart.js / data thật từ Flask sau này.
</script>

    <script>
    window.VSP_DATA = {{ vsp_data_json|safe }};
  </script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // VSP KPI TOTAL AUTO – dùng VSP_DATA.total cho KPI đầu tiên
    document.addEventListener('DOMContentLoaded', function () {
      try {
        if (!window.VSP_DATA || typeof window.VSP_DATA.total !== 'number') return;
        var el = document.querySelector('.kpi-row .kpi-card .kpi-value') 
                 || document.querySelector('.kpi-card .kpi-value');
        if (el) {
          el.textContent = window.VSP_DATA.total;
        }
      } catch (e) {
        console.log('VSP KPI total hook error', e);
      }
    });
  </script>

  <script>
    // Demo charts cho VSP 5-tab. Sau này bind data thật từ Flask/API.
    window.addEventListener('load', function () {
      if (!window.Chart) return;

      function safeCtx(id) {
        var el = document.getElementById(id);
        if (!el) return null;
        var ctx = el.getContext ? el.getContext('2d') : el;
        return ctx;
      }

      // 1) Dashboard – Severity donut (6 levels)
      (function () {
        var ctx = safeCtx('chartSeverityDonut');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: ['CRITICAL', 'HIGH', 'MEDIUM', 'LOW', 'INFO', 'TRACE'],
            datasets: [{
              data: (function () {
                var d = (window.VSP_DATA && window.VSP_DATA.severity) || {};
                return [
                  d.CRITICAL || 0,
                  d.HIGH || 0,
                  d.MEDIUM || 0,
                  d.LOW || 0,
                  d.INFO || 0,
                  d.TRACE || 0
                ];
              })(),
              backgroundColor: [
                '#ff1744',
                '#ff6d00',
                '#fbbf24',
                '#22c55e',
                '#38bdf8',
                '#a855f7'
              ],
              borderWidth: 0,
              hoverOffset: 4
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: true,
                position: 'bottom',
                labels: {
                  color: '#e5e7eb',
                  font: { size: 10 }
                }
              },
              tooltip: {
                enabled: true
              }
            },
            cutout: '65%'
          }
        });
      })();

      // 2) Dashboard – Trend over time
      (function () {
        var ctx = safeCtx('chartTrend');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'line',
