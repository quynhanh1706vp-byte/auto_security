  <script>
    // VSP RUN button -> call backend API
    document.addEventListener('DOMContentLoaded', function () {
      const btn   = document.getElementById('vsp-run-btn');
      const stEl  = document.getElementById('vsp-run-status');
      const urlEl = document.getElementById('vsp-target-url');
      const srcEl = document.getElementById('vsp-src-path');
      const profEl= document.getElementById('vsp-profile');

      if (!btn || !stEl) return;

      function setStatus(text, mode) {
        stEl.textContent = text;
        stEl.dataset.mode = mode || '';
      }

      btn.addEventListener('click', async function () {
        const target_url = urlEl ? urlEl.value.trim() : '';
        const src_path   = srcEl ? srcEl.value.trim() : '';
        const profile    = profEl ? profEl.value : 'EXT';

        if (!target_url || !src_path) {
          setStatus('Status: missing Target URL / SRC path', 'error');
          return;
        }

        btn.disabled = true;
        btn.classList.add('is-loading');
        setStatus('Status: running – submitting job to backend...', 'running');

        try {
          const res = await fetch('/api/vsp/run_full', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              target_url: target_url,
              src_path: src_path,
              profile: profile
            })
          });

          const data = await res.json().catch(() => ({}));

          if (!res.ok) {
            const msg = data.error || ('HTTP ' + res.status);
            setStatus('Status: failed – ' + msg, 'error');
          } else {
            const run_id = data.run_id || 'N/A';
            setStatus('Status: completed – RUN_ID=' + run_id, 'ok');
          }
        } catch (err) {
          setStatus('Status: error – ' + (err && err.message ? err.message : 'network error'), 'error');
        } finally {
          btn.disabled = false;
          btn.classList.remove('is-loading');
        }
      });
    });
  </script>

  <!-- VSP_RUNS_UI_V1: auto load runs table from /api/vsp/runs_index -->
  <script>
  (function() {
    async function loadRunsTable() {
      try {
        const resp = await fetch('/api/vsp/runs_index');
        if (!resp.ok) {
          console.error('VSP runs_index error status', resp.status);
          return;
        }
        const payload = await resp.json();
        const runs = (payload && payload.runs) || [];
        const tbody = document.getElementById('vsp-runs-tbody');
        if (!tbody) {
          console.warn('VSP_RUNS_UI_V1: không tìm thấy tbody#vsp-runs-tbody');
          return;
        }

        // sort desc theo timestamp (mới nhất lên đầu)
        runs.sort(function(a, b) {
          return (a.timestamp < b.timestamp) ? 1 : -1;
        });

        tbody.innerHTML = '';

        runs.forEach(function(r, idx) {
          const tr = document.createElement('tr');

          function td(text) {
            const el = document.createElement('td');
            el.textContent = text == null ? '' : String(text);
            return el;
          }

          const sev = (r.by_severity || {});

          tr.appendChild(td(idx + 1));                 // #
          tr.appendChild(td(r.run_id));                // Run ID
          tr.appendChild(td(r.timestamp));             // Timestamp
          tr.appendChild(td(r.profile || ''));         // Profile
          tr.appendChild(td(r.src_path || ''));        // SRC path
          tr.appendChild(td(r.target_url || ''));      // URL
          tr.appendChild(td(sev.CRITICAL || 0));       // CRITICAL
          tr.appendChild(td(sev.HIGH || 0));           // HIGH
          tr.appendChild(td(sev.MEDIUM || 0));         // MED
          tr.appendChild(td(sev.LOW || 0));            // LOW
          tr.appendChild(td(sev.INFO || 0));           // INFO
          tr.appendChild(td(sev.TRACE || 0));          // TRACE
          tr.appendChild(td(r.total_findings || 0));   // Total

          tbody.appendChild(tr);
        });
      } catch (e) {
        console.error('VSP_RUNS_UI_V1: loadRunsTable error', e);
      }
    }

    document.addEventListener('DOMContentLoaded', loadRunsTable);
  })();
  </script>

  <!-- VSP_KPI_BIND_V1: fill KPI cards from window.VSP_DATA -->
  <script>
  (function() {
    function log(...args) {
      if (window.console && console.log) {
        console.log('[VSP_KPI]', ...args);
      }
    }

    function findKpiValueByLabel(labelText) {
      const cards = document.querySelectorAll('.vsp-kpi-card');
      if (!cards.length) return null;
      const target = labelText.toUpperCase();
      for (const card of cards) {
        const label = card.querySelector('.vsp-kpi-label');
        const value = card.querySelector('.vsp-kpi-value');
        if (!label || !value) continue;
        const txt = (label.textContent || '').toUpperCase();
        if (txt.indexOf(target) !== -1) {
          return value;
        }
      }
      return null;
    }

    function setKpi(label, value) {
      const el = findKpiValueByLabel(label);
      if (!el) {
        log('Không tìm thấy KPI cho label', label);
        return;
      }
      try {
        if (typeof value === 'number') {
          el.textContent = value.toLocaleString();
        } else {
          el.textContent = String(value);
        }
      } catch (e) {
        el.textContent = String(value);
      }
    }

    function fillKpisFromData() {
      const data = (window.VSP_DATA || {});
      const sev  = (data.severity || {});
      const total = data.total || data.total_findings || 0;

      log('VSP_DATA =', data);

      // TOTAL FINDINGS
      setKpi('TOTAL FINDINGS', total);

      // 6 severity buckets
      setKpi('CRITICAL', sev.CRITICAL || 0);
      setKpi('HIGH',     sev.HIGH     || 0);
      setKpi('MEDIUM',   sev.MEDIUM   || 0);
      setKpi('LOW',      sev.LOW      || 0);

      const info  = sev.INFO  || 0;
      const trace = sev.TRACE || 0;
      setKpi('INFO', info + trace);          // label INFO / INFO + TRACE

      // Security posture score – tạm tính demo: 100 - (CRIT*5 + HIGH*2) / 100
      var score = 100;
      var crit = sev.CRITICAL || 0;
      var high = sev.HIGH || 0;
      var raw = 100 - Math.min(100, (crit * 5 + high * 2) / 100);
      score = Math.round(raw < 0 ? 0 : raw);
      setKpi('SECURITY SCORE', score + '/100');
      setKpi('SECURITY POSTURE SCORE', score + '/100');
    }

    document.addEventListener('DOMContentLoaded', function() {
      try {
        fillKpisFromData();
      } catch (e) {
        log('Lỗi fillKpisFromData', e);
      }
    });
  })();
  </script>

  <!-- VSP_RUN_BUTTON_UI_V1: hook nút RUN FULL SCAN -->
  <script>
  (function() {
    function log() {
      if (window.console && console.log) {
        console.log.apply(console, ['[VSP_RUN]'].concat(Array.from(arguments)));
      }
    }

    async function callRunApi(payload) {
      const resp = await fetch('/api/vsp/run_full_scan', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(payload)
      });
      if (!resp.ok) {
        throw new Error('HTTP ' + resp.status);
      }
      return await resp.json();
    }

    function getEl(id) {
      return document.getElementById(id);
    }

    function bindRunButton() {
      const btn = getEl('vsp-run-full-btn');
      const targetInput = getEl('vsp-target-url');
      const srcInput = getEl('vsp-src-path');
      const profileSelect = getEl('vsp-profile-select');
      const statusEl = getEl('vsp-run-status');

      if (!btn) {
        log('Không tìm thấy nút RUN (#vsp-run-full-btn)');
        return;
      }

      btn.addEventListener('click', async function() {
        const targetUrl = targetInput ? targetInput.value.trim() : '';
        const srcPath   = srcInput   ? srcInput.value.trim()   : '';
        const profile   = profileSelect ? profileSelect.value : 'EXT';

        const payload = {
          target_url: targetUrl,
          src_path: srcPath,
          profile: profile
        };

        log('Gửi run_full_scan', payload);

        if (statusEl) {
          statusEl.textContent = 'Status: running (UI queued)...';
        }

        btn.disabled = true;

        try {
          const data = await callRunApi(payload);
          log('Kết quả run_full_scan', data);
          if (statusEl) {
            statusEl.textContent = 'Status: ' + (data.status || 'done');
          }
          // TODO: sau này có thể auto refresh Dashboard / Runs
        } catch (e) {
          log('Lỗi khi gọi run_full_scan', e);
          if (statusEl) {
            statusEl.textContent = 'Status: error – ' + e;
          } else {
            alert('Run error: ' + e);
          }
        } finally {
          btn.disabled = false;
        }
      });
    }

    document.addEventListener('DOMContentLoaded', bindRunButton);
  })();
  </script>

<script>
  (function() {
    async function loadVspDashboard() {
      try {
        const res = await fetch('/api/vsp/dashboard_v3');
        const data = await res.json();
        console.log('[VSP] /api/vsp/dashboard =>', data);

        if (!data) {
          console.warn('[VSP] Không có data dashboard');
          return;
        }

        const severity = data.severity || {};
        const total    = (data.total_findings !== undefined) ? data.total_findings : 0;

        const kpiCards = document.querySelectorAll('.kpi-grid .kpi-card');
        if (kpiCards.length < 6) {
          console.warn('[VSP] Không đủ kpi-card để bind dữ liệu (cần >= 6).');
          return;
        }

        // 0: Total findings
        const kpiTotal  = kpiCards[0].querySelector('.kpi-value');
        // 1: Critical
        const kpiCrit   = kpiCards[1].querySelector('.kpi-value');
        // 2: High
        const kpiHigh   = kpiCards[2].querySelector('.kpi-value');
        // 3: Medium
        const kpiMed    = kpiCards[3].querySelector('.kpi-value');
        // 4: Low
        const kpiLow    = kpiCards[4].querySelector('.kpi-value');
        // 5: Info + Trace
        const kpiInfoTr = kpiCards[5].querySelector('.kpi-value');

        if (kpiTotal)  kpiTotal.textContent  = total;
        if (kpiCrit)   kpiCrit.textContent   = severity.CRITICAL ?? 0;
        if (kpiHigh)   kpiHigh.textContent   = severity.HIGH ?? 0;
        if (kpiMed)    kpiMed.textContent    = severity.MEDIUM ?? 0;
        if (kpiLow)    kpiLow.textContent    = severity.LOW ?? 0;
        if (kpiInfoTr) kpiInfoTr.textContent = (severity.INFO ?? 0) + (severity.TRACE ?? 0);
      } catch (e) {
        console.error('[VSP] Lỗi loadVspDashboard()', e);
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      if (document.querySelector('.kpi-grid')) {
        loadVspDashboard();
      }
    });
  })();
</script>

  <script src="/static/js/vsp_cleanup_placeholders_v2.js"></script>
  <script src="/static/js/vsp_fix_total_findings_v1.js"></script>
</body>



</html>

