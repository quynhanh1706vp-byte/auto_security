<script>
  // Simple tab switcher – bạn có thể gắn vào JS hiện có
  const tabButtons = document.querySelectorAll('.vsp-tab-btn');
  const tabPanes = document.querySelectorAll('.tab-pane');

  tabButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const targetId = btn.dataset.tab;

      tabButtons.forEach(b => b.classList.remove('active'));
      tabPanes.forEach(p => p.classList.remove('active'));

      btn.classList.add('active');
      document.getElementById(targetId).classList.add('active');
    });
  });

  // NOTE: Các canvas (chartSeverityDonut, chartTrend, ...) chỉ là placeholder.
  // Bạn bind Chart.js / data thật từ Flask sau này.
</script>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Demo charts cho VSP 5-tab. Sau này bind data thật từ Flask/API.
    window.addEventListener('load', function () {
      if (!window.Chart) return;

      function safeCtx(id) {
        var el = document.getElementById(id);
        if (!el) return null;
        var ctx = el.getContext ? el.getContext('2d') : el;
        return ctx;
      }

      // 1) Dashboard – Severity donut (6 levels)
      (function () {
        var ctx = safeCtx('chartSeverityDonut');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: ['CRITICAL', 'HIGH', 'MEDIUM', 'LOW', 'INFO', 'TRACE'],
            datasets: [{
              data: [4, 12, 28, 40, 22, 6],
              backgroundColor: [
                '#ff1744',
                '#ff6d00',
                '#fbbf24',
                '#22c55e',
                '#38bdf8',
                '#a855f7'
              ],
              borderWidth: 0,
              hoverOffset: 4
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: true,
                position: 'bottom',
                labels: {
                  color: '#e5e7eb',
                  font: { size: 10 }
                }
              },
              tooltip: {
                enabled: true
              }
            },
            cutout: '65%'
          }
        });
      })();

      // 2) Dashboard – Trend over time
      (function () {
        var ctx = safeCtx('chartTrend');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['Run -4', 'Run -3', 'Run -2', 'Run -1', 'Current'],
            datasets: [
              {
                label: 'Total findings',
                data: [220, 210, 260, 280, 240],
                borderColor: '#38bdf8',
                tension: 0.3,
                fill: false
              },
              {
                label: 'CRIT + HIGH',
                data: [32, 28, 35, 30, 24],
                borderColor: '#fb3c6c',
                tension: 0.3,
                fill: false
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                ticks: { color: '#9ca3af', font: { size: 10 } },
                grid: { color: 'rgba(55,65,81,0.4)' }
              },
              y: {
                ticks: { color: '#9ca3af', font: { size: 10 } },
                grid: { color: 'rgba(55,65,81,0.4)' }
              }
            },
            plugins: {
              legend: {
                labels: { color: '#e5e7eb', font: { size: 10 } }
              }
            }
          }
        });
      })();

      // 3) Dashboard – Critical & High by tool
      (function () {
        var ctx = safeCtx('chartByTool');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Semgrep', 'Gitleaks', 'Bandit', 'Trivy', 'Grype', 'KICS', 'CodeQL'],
            datasets: [
              {
                label: 'CRITICAL',
                data: [4, 2, 1, 3, 5, 1, 2],
                backgroundColor: '#ff1744'
              },
              {
                label: 'HIGH',
                data: [8, 4, 3, 5, 7, 2, 4],
                backgroundColor: '#ff6d00'
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                ticks: { color: '#9ca3af', font: { size: 10 }, maxRotation: 0 },
                grid: { display: false }
              },
              y: {
                ticks: { color: '#9ca3af', font: { size: 10 } },
                grid: { color: 'rgba(55,65,81,0.4)' }
              }
            },
            plugins: {
              legend: {
                labels: { color: '#e5e7eb', font: { size: 10 } }
              }
            }
          }
        });
      })();

      // 4) Dashboard – Top CWE exposure (horizontal bar)
      (function () {
        var ctx = safeCtx('chartTopCWE');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['CWE-79', 'CWE-89', 'CWE-22', 'CWE-200', 'CWE-125'],
            datasets: [{
              label: 'Findings',
              data: [14, 9, 7, 6, 5],
              backgroundColor: '#22d3ee'
            }]
          },
          options: {
            indexAxis: 'y',
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                ticks: { color: '#9ca3af', font: { size: 10 } },
                grid: { color: 'rgba(55,65,81,0.4)' }
              },
              y: {
                ticks: { color: '#e5e7eb', font: { size: 10 } },
                grid: { display: false }
              }
            },
            plugins: {
              legend: { display: false }
            }
          }
        });
      })();

      // 5) Data Source – Severity donut
      (function () {
        var ctx = safeCtx('dataSeverityDonut');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: ['CRIT', 'HIGH', 'MED', 'LOW', 'INFO', 'TRACE'],
            datasets: [{
              data: [3, 10, 25, 38, 18, 4],
              backgroundColor: [
                '#ff1744',
                '#ff6d00',
                '#fbbf24',
                '#22c55e',
                '#38bdf8',
                '#a855f7'
              ],
              borderWidth: 0
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'bottom',
                labels: { color: '#e5e7eb', font: { size: 9 } }
              }
            },
            cutout: '65%'
          }
        });
      })();

      // 6) Data Source – Top CWE + directories (stacked-ish bar)
      (function () {
        var ctx = safeCtx('dataCWEAndDirs');
        if (!ctx) return;
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['CWE-79', 'CWE-89', 'CWE-22', 'CWE-200', 'CWE-125'],
            datasets: [
              {
                label: 'src/api',
                data: [6, 5, 2, 3, 2],
                backgroundColor: '#38bdf8'
              },
              {
                label: 'src/web',
                data: [4, 2, 3, 2, 2],
                backgroundColor: '#22c55e'
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                ticks: { color: '#9ca3af', font: { size: 9 } },
                grid: { display: false }
              },
              y: {
                ticks: { color: '#9ca3af', font: { size: 9 } },
                grid: { color: 'rgba(55,65,81,0.4)' }
              }
            },
            plugins: {
              legend: {
                labels: { color: '#e5e7eb', font: { size: 9 } }
              }
            }
          }
        });
      })();
    });
  </script>
