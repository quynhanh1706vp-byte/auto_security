# VSP_ROOT_FORCE_REDIRECT_V2
# ================================
try:
  from flask import redirect as _vsp_redirect
except Exception:
  _vsp_redirect = None

@app.before_request
def __vsp_force_root_to_vsp4_v2():
  try:
    # exact root only
    if request.path == "/" and _vsp_redirect is not None:
      return _vsp_redirect("/vsp4/#dashboard", code=302)
  except Exception:
    pass
  return None



